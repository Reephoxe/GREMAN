<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="polytech.univtours.greman.InputDialogController">
    <Label text="Nombre de bobines:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="nombreBobines" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Nombre de condensateurs:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="nombreCondensateurs" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Pondération des bobines:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="ponderationBobines" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Pondération des condensateurs:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="ponderationCondensateurs" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Button onAction="#isOkClicked" text="OK" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
