<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="polytech.univtours.greman.FileSaveController">
   <children>
      <VBox alignment="CENTER" layoutY="100.0" prefHeight="53.0" prefWidth="600.0">
         <children>
            <Label text="Sauvegarder des fichiers">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <VBox layoutX="247.0" layoutY="154.0" prefHeight="200.0" prefWidth="130.0">
         <children>
            <CheckBox fx:id="csvRlcCheckBox" mnemonicParsing="false" text="CSV RLC">
               <padding>
                  <Insets bottom="5.0" />
               </padding>
               <font>
                  <Font size="18.0" />
               </font>
            </CheckBox>
            <CheckBox fx:id="circuitCheckBox" mnemonicParsing="false" text="Circuit">
               <padding>
                  <Insets bottom="5.0" />
               </padding>
               <font>
                  <Font size="18.0" />
               </font>
            </CheckBox>
            <CheckBox fx:id="courbeCheckBox" mnemonicParsing="false" text="Courbe">
               <padding>
                  <Insets bottom="5.0" />
               </padding>
               <font>
                  <Font size="18.0" />
               </font>
            </CheckBox>
            <CheckBox fx:id="valeurCheckBox" mnemonicParsing="false" text="Valeur composant">
               <padding>
                  <Insets bottom="5.0" />
               </padding>
               <font>
                  <Font size="18.0" />
               </font>
            </CheckBox>
            <CheckBox fx:id="ltspiceCheckBox" mnemonicParsing="false" text="LTSpice">
               <font>
                  <Font size="18.0" />
               </font>
            </CheckBox>
         </children>
      </VBox>
      <Button layoutX="25.0" layoutY="25.0" mnemonicParsing="false" onAction="#backToMainScene" text="Retour" />
      <VBox alignment="CENTER" layoutY="400.0" prefHeight="68.0" prefWidth="600.0">
         <children>
            <Button mnemonicParsing="false" onAction="#saveToFile" text="Valider">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>